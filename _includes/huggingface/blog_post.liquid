{% assign post_id = include.post %}
{% assign post_parts = post_id | split: "/" %}
{% assign post_name = post_parts | last %}
{% assign post_name_formatted = post_name | replace: "-", " " | capitalize %}

<div class="repo p-2">
  <div class="repo-title d-flex align-items-center">
    <a href="https://huggingface.co/blog/{{ post_id }}" target="_blank" rel="external noopener">
      <div>📝 {{ post_name_formatted }}</div>
    </a>
  </div>
  <div class="repo-body">
    <div class="repo-description">
      <p class="mt-2">
        <a href="https://huggingface.co/blog/{{ post_id }}" target="_blank" rel="external noopener" class="btn btn-sm btn-primary">Read Blog Post</a>
      </p>
    </div>
  </div>
</div>