<!-- _includes/huggingface.liquid -->
{% assign username = include.username %}
{% assign model_id = include.model_id %}
{% assign space_id = include.space_id %}
{% assign dataset_id = include.dataset_id %}
{% assign widget_width = include.width | default: "100%" %}
{% assign widget_height = include.height | default: "500px" %}
{% assign widget_class = include.class %}

<div class="huggingface-widget {% if widget_class %}{{ widget_class }}{% endif %}">
  {% if username %}
    <!-- Profile badge -->
    <div class="hf-profile-badge">
      <a href="https://huggingface.co/{{ username }}" target="_blank">
        <img src="https://img.shields.io/badge/ðŸ¤—_HuggingFace-{{ username }}-yellow?style=for-the-badge&logo=data:image/png;base64,&labelColor=white" alt="Hugging Face {{ username }}">
      </a>
    </div>
  {% endif %}

  {% if model_id %}
    <!-- Model card embed -->
    <div class="hf-model">
      <iframe 
        src="https://huggingface.co/{{ model_id }}?iframe=true" 
        frameborder="0" 
        width="{{ widget_width }}" 
        height="{{ widget_height }}"
        loading="lazy"
      ></iframe>
    </div>
  {% endif %}

  {% if space_id %}
    <!-- Space embed -->
    <div class="hf-space">
      <iframe 
        src="https://huggingface.co/spaces/{{ space_id }}?iframe=true" 
        frameborder="0" 
        width="{{ widget_width }}" 
        height="{{ widget_height }}"
        loading="lazy"
      ></iframe>
    </div>
  {% endif %}

  {% if dataset_id %}
    <!-- Dataset embed -->
    <div class="hf-dataset">
      <iframe 
        src="https://huggingface.co/datasets/{{ dataset_id }}?iframe=true" 
        frameborder="0" 
        width="{{ widget_width }}" 
        height="{{ widget_height }}"
        loading="lazy"
      ></iframe>
    </div>
  {% endif %}
</div>