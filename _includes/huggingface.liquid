<!-- _includes/huggingface.liquid -->
{% assign username = include.username %}
{% assign model_id = include.model_id %}
{% assign space_id = include.space_id %}
{% assign dataset_id = include.dataset_id %}
{% assign widget_width = include.width | default: "100%" %}
{% assign widget_height = include.height | default: "500px" %}
{% assign widget_class = include.class %}

<div class="huggingface-widget {% if widget_class %}{{ widget_class }}{% endif %}">
  {% if username %}
    <!-- Profile badge -->
    <div class="hf-profile-badge">
      <a href="https://huggingface.co/{{ username }}" target="_blank">
        <img src="https://img.shields.io/badge/ðŸ¤—_HuggingFace-{{ username }}-yellow?style=for-the-badge&logo=data:image/png;base64,&labelColor=white" alt="Hugging Face {{ username }}">
      </a>
    </div>
  {% endif %}

  {% if model_id %}
    <!-- Model card link -->
    <div class="hf-model">
      <p>
        <a href="https://huggingface.co/{{ model_id }}" target="_blank" rel="external noopener" class="btn btn-sm btn-primary">
          <i class="fa-solid fa-brain me-1"></i> View Model: {{ model_id | split: "/" | last }}
        </a>
      </p>
    </div>
  {% endif %}

  {% if space_id %}
    <!-- Space link -->
    <div class="hf-space">
      <p>
        <a href="https://huggingface.co/spaces/{{ space_id }}" target="_blank" rel="external noopener" class="btn btn-sm btn-primary">
          <i class="fa-solid fa-rocket me-1"></i> View Space: {{ space_id | split: "/" | last }}
        </a>
      </p>
    </div>
  {% endif %}

  {% if dataset_id %}
    <!-- Dataset link -->
    <div class="hf-dataset">
      <p>
        <a href="https://huggingface.co/datasets/{{ dataset_id }}" target="_blank" rel="external noopener" class="btn btn-sm btn-primary">
          <i class="fa-solid fa-database me-1"></i> View Dataset: {{ dataset_id | split: "/" | last }}
        </a>
      </p>
    </div>
  {% endif %}
</div>